<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dialog_content_area_padding_top">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/catrobat_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/nav_drawer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_holder_padding"
        android:paddingStart="@dimen/dialog_content_area_padding"
        android:text="@string/username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_drawer_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dialog_content_area_padding"
        android:text="@string/accountName" />
    



</LinearLayout>